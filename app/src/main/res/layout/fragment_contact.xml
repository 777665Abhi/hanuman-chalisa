<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialog.ContactFragment"
    android:background="@color/background"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/contactus"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textStyle="bold" />
  <LinearLayout
      android:id="@+id/lnPhone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/rect_circle"
      android:padding="8dp"
      android:layout_marginTop="8dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="8956237845"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_phone_24"
       android:drawablePadding="16dp"/>
  </LinearLayout>
    <LinearLayout
        android:id="@+id/lnEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_circle"
        android:layout_marginTop="16dp"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dailyuseapp@gmail"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_email_24"
            android:drawablePadding="16dp"/>
    </LinearLayout>
</LinearLayout>